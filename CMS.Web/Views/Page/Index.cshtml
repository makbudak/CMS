@model CMS.Model.Entity.Page

@{
    ViewData["Title"] = Model != null ? Model.Title : "404";
}

<main id="main">
    @if (Model == null)
    {
        <div class="container">
            <div class="alert alert-danger" style="margin-top: 100px;">Kayıt bulunamadı</div>
        </div>
    }
    else
    {
        <section id="breadcrumbs" class="breadcrumbs">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <h2>@Model.Title</h2>
                    <ol>
                        <li><a href="/">Anasayfa</a></li>
                        <li><a>@Model.Title</a></li>
                    </ol>
                </div>
            </div>
        </section>
        <section>
            <div class="container">
                <div class="entries">
                    <article class="entry entry-single">
                       
                        <div class="entry-content">
                            <div class="box-shadow p-5">
                                @Html.Raw(Model.Content)
                            </div>
                        </div>

                    </article>
                </div>
            </div>
        </section>
    }
</main>
