@{
    ViewData["Title"] = "Hesabım";
}

<main id="main">
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Hesabım</h2>
                <ol>
                    <li><a href="/">Anasayfa</a></li>
                    <li>Hesabım</li>
                </ol>
            </div>
        </div>
    </section>
    <div class="container my-3">
        <div class="row">
            <div class="col-md-3">
                @await Html.PartialAsync("_ProfileMenu")
            </div>
            <div class="col-md-9">
                <div class="card box-shadow">
                    <div class="card-body">
                        <div class="my-3">
                            <div class="row">
                                <div class="col-md-6">
                                    <form id="profileForm">
                                        <div class="m-3">
                                            <label class="form-label">Email Adresi</label>
                                            <input type="email"
                                                   id="txtEmailAddress"
                                                   name="txtEmailAddress"
                                                   class="form-control w-100" />
                                        </div>

                                        <div class="m-3">
                                            <label class="form-label">Adı</label>
                                            <input type="text"
                                                   id="txtName"
                                                   name="txtName"
                                                   class="form-control w-100"
                                                   required
                                                   data-required-msg="Adı giriniz." />
                                            <span class="k-invalid-msg" data-for="txtName"></span>
                                        </div>

                                        <div class="m-3">
                                            <label class="form-label">Soyadı</label>
                                            <input type="text"
                                                   id="txtSurname"
                                                   name="txtSurname"
                                                   class="form-control w-100"
                                                   required
                                                   data-required-msg="Soyadı giriniz." />
                                            <span class="k-invalid-msg" data-for="txtSurname"></span>
                                        </div>

                                        <div class="m-3">
                                            <label class="form-label">Telefon</label>
                                            <input type="text"
                                                   id="txtPhone"
                                                   name="txtPhone"
                                                   class="form-control w-100"
                                                   required
                                                   data-required-msg="Telefon giriniz." />
                                            <span class="k-invalid-msg" data-for="txtPhone"></span>
                                        </div>

                                        <div class="m-3">
                                            <button id="btnProfile"
                                                    type="submit"
                                                    class="btn bg-green text-white float-start">
                                                Kaydet
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts{
    <script src="~/js/pages/frontend/account/profile.js"></script>
}