@{
    ViewData["Title"] = "Giriş Yap";
}
<main id="main">
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Giriş Yap</h2>
                <ol>
                    <li><a href="/">Anasayfa</a></li>
                    <li>Giriş Yap</li>
                </ol>
            </div>
        </div>
    </section>
    <div class="container my-3">
        <input type="hidden" id="txtReturnUrl" value="@ViewBag.ReturnUrl" />
        <div class="card box-shadow">
            <div class="card-body">
                <div class="col-md-4 offset-md-4 my-5">
                    <div class="card">
                        <div class="card-header py-3 bg-white">
                            <h4>Giriş Yap</h4>
                        </div>
                        <div class="card-body">
                            <form id="loginForm">
                                <div class="mb-3">
                                    <label class="form-label">Email Adresi</label>
                                    <input class="w-100 form-control"
                                           id="txtEmailAddress"
                                           name="txtEmailAddress"
                                           type="email"
                                           required data-required-msg="Email adresi giriniz."
                                           data-email-msg="Email formatı geçersiz." />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Şifre</label>
                                    <input class="w-100 form-control"
                                           id="txtPassword"
                                           name="txtPassword"
                                           type="password"
                                           required data-required-msg="Şifre giriniz." />
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                    </div>
                                    <div class="col-6">
                                        <a class="float-end pb-3 text-decoration-none cursor-pointer"
                                           href="/forgot-password">
                                            Şifremi Unuttum
                                        </a>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <button id="btnLogin"
                                            class="btn bg-green text-white w-100"
                                            type="submit">
                                        Giriş Yap
                                    </button>
                                </div>
                                <div class="text-center">
                                    Üye değil misiniz?
                                    <a class="text-decoration-none cursor-pointer"
                                       href="/register">Üye Ol</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts{
    <script src="/js/pages/frontend/account/login.js"></script>
}