@{
    ViewData["Title"] = "Blog";
}

@section Styles {
    <style>
        .blog .entry .entry-content p {
            text-wrap: wrap;
        }

        .dx-list-item {
            cursor: unset !important;
        }

            .dx-list-item:first-of-type {
                margin-top: 0px !important;
            }

        .dx-list-item-content {
            padding: unset !important;
        }
    </style>
}

<main id="main" ng-app="app" ng-controller="appController">
    <input id="searchText" type="hidden" value="@ViewBag.SearchText" />

    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Blog</h2>
                <ol>
                    <li><a href="/">Anasayfa</a></li>
                    <li>Blog</li>
                </ol>
            </div>
        </div>
    </section>

    <section id="blog" class="blog">
        <div class="container">
            <div class="row">
                <div class="col-md-8 entries mb-5">
                    <div ng-cloak dx-list="listOptions" dx-item-alias="blog">
                        <div data-options="dxTemplate: {name: 'item'}">
                            <article class="entry shadow border pt-0">
                                <div class="entry-img">
                                    <img ng-src="{{blog.imageUrl}}" alt="" class="img-fluid">
                                </div>

                                <h2 class="entry-title">
                                    <a href="/blog/{{blog.url}}/{{blog.id}}">{{blog.title}}</a>
                                </h2>

                                <div class="entry-meta">
                                    <ul>
                                        <li class="d-flex align-items-center">
                                            <i class="fa fa-user me-1"></i>
                                            <a>{{blog.userName}}</a>
                                        </li>
                                        <li class="d-flex align-items-center">
                                            <i class="fa fa-clock me-1"></i>
                                            <a>
                                                <time>{{blog.insertedDate | date:'dd.MM.yyyy'}}</time>
                                            </a>
                                        </li>
                                        <li class="d-flex align-items-center">
                                            <i class="fa fa-comments me-1"></i>
                                            <a>{{blog.commentCount}} Yorum</a>
                                        </li>
                                    </ul>
                                </div>

                                <div class="entry-content">
                                    <p ng-bind="blog.description"></p>
                                    <div class="read-more">
                                        <a href="/blog/{{blog.url}}/{{blog.id}}">
                                            Detaylar
                                            <i class="fa fa-arrow-right"></i>
                                        </a>
                                    </div>
                                </div>
                            </article>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="sidebar shadow border">
                        <h3 class="sidebar-title">Ara</h3>
                        <div class="sidebar-item search-form">
                            <form action="">
                                <input type="text" id="txtSearch">
                                <button type="button" id="btnSearch">
                                    <i class="fa fa-search"></i>
                                </button>
                            </form>
                        </div>

                        <h3 class="sidebar-title pb-2">Kategoriler</h3>
                        <div class="sidebar-item categories">
                            <ul id="blogCategoryList">
                            </ul>
                        </div>

                        <script type="text/x-kendo-template" id="blogCategoryTemplate">
                            <li class="my-3">
                                <a href="/blog/#:url#">
                                    <i class='fa fa-chevron-right me-2'></i>
                                    #:name# <span>(#:blogCount#)</span>
                                </a>
                            </li>
                        </script>

                        <h3 class="sidebar-title pb-2">Çok Okunanlar</h3>

                        <div class="sidebar-item recent-posts" id="blogMostReadList"></div>

                        <script type="text/x-kendo-template" id="blogMostReadTemplate">
                            <div class="post-item mb-4 clearfix">
                                <img src="#:imageUrl#" alt="">
                                <h4><a href="/blog/#:url#/#:id#">#:title#</a></h4>
                                <time>#:dateFormat(insertedDate)#</time>
                            </div>
                        </script>

                        <h3 class="sidebar-title">Etiketler</h3>

                        <div class="sidebar-item tags">
                            <ul>
                                <li><a href="#">App</a></li>
                                <li><a href="#">IT</a></li>
                                <li><a href="#">Business</a></li>
                                <li><a href="#">Mac</a></li>
                                <li><a href="#">Design</a></li>
                                <li><a href="#">Office</a></li>
                                <li><a href="#">Creative</a></li>
                                <li><a href="#">Studio</a></li>
                                <li><a href="#">Smart</a></li>
                                <li><a href="#">Tips</a></li>
                                <li><a href="#">Marketing</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <script>
        appModule.controller('appController', ($scope, $http) => {
            const store = DevExpress.data.AspNet.createStore({
                key: 'id',
                loadUrl: '/blog/list'
            });


            $scope.listOptions = {
                dataSource: new DevExpress.data.DataSource({
                    store,
                    paginate: true,
                    pageSize: 5,
                    sort: 'id',
                }),
                remoteOperations: true,
                pageLoadMode: 'nextButton',
                nextButtonText: 'Daha Fazla',
                selectByClick: false,
                hoverStateEnabled: false,
                activeStateEnabled: false
            };

        });
    </script>
    <script src="/js/pages/frontend/blog/blog-list.js"></script>
}