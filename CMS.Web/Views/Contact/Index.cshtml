@{
    ViewData["Title"] = "İletişim";
}

<main id="main" ng-app="app" ng-controller="appController" ng-cloak>
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h2>İletişim</h2>
                <ol>
                    <li><a href="/">Anasayfa</a></li>
                    <li>İletişim</li>
                </ol>
            </div>
        </div>
    </section>
    <div class="map-section">
        <iframe style="border:0; width: 100%; height: 350px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" allowfullscreen></iframe>
    </div>

    <section id="contact" class="contact">
        <div class="container">
            <div class="row justify-content-center" data-aos="fade-up">
                <div class="col-lg-10">
                    <div class="info-wrap">
                        <div class="row">
                            <div class="col-lg-4 info">
                                <i class="fa fa-map h6"></i>
                                <h4>Adres:</h4>
                                <p>A108 Adam Street<br>New York, NY 535022</p>
                            </div>

                            <div class="col-lg-4 info mt-4 mt-lg-0">
                                <i class="fa fa-envelope"></i>
                                <h4>Email Adresi:</h4>
                                <p>info@example.com<br>contact@example.com</p>
                            </div>

                            <div class="col-lg-4 info mt-4 mt-lg-0">
                                <i class="fa fa-phone"></i>
                                <h4>Telefon:</h4>
                                <p>+1 5589 55488 51<br>+1 5589 22475 14</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-5 justify-content-center">
                <div class="col-lg-10">
                    <div class="php-email-form">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="w-100" dx-select-box="{
                                        placeholder: 'Konu seçiniz',
                                        label: 'Konu',
                                        stylingMode: 'outlined',
                                        labelMode: 'floating',
                                        displayExpr: 'name',
                                        valueExpr: 'id',
                                        bindingOptions: {
                                            dataSource: 'contactCategories',
                                            value: 'formData.contactCategoryId'
                                        }
                                    }"
                                     dx-validator="{
                                         validationRules: [{
                                            type: 'required'
                                        }]
                                    }"></div>
                            </div>
                            <div class="col-md-6">
                                <div class="w-100 mb-4"
                                     dx-text-box="{
                                            label: 'Email Adresi',
                                            stylingMode: 'outlined',
                                            labelMode: 'floating',
                                            bindingOptions: {
                                                value: 'formData.emailAddress'
                                            }
                                        }"
                                     dx-validator="{
                                            validationRules: [{
                                            type: 'required' ,
                                            message: 'Email adresi giriniz.'
                                            },
                                            {
                                              type: 'email',
                                              message: 'Email adresi geçersiz.',
                                            }]
                                         }">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="w-100 mb-4"
                                     dx-text-box="{
                                            label: 'Adı',
                                            stylingMode: 'outlined',
                                            labelMode: 'floating',
                                            bindingOptions: {
                                                value: 'formData.name'
                                            }
                                        }"
                                     dx-validator="{
                                         validationRules: [{
                                            type: 'required',
                                            message: 'Adı giriniz.'
                                        }]
                                    }">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="w-100 mb-4"
                                     dx-text-box="{
                                            label: 'Soyadı',
                                            stylingMode: 'outlined',
                                            labelMode: 'floating',
                                            bindingOptions: {
                                                value: 'formData.surname'
                                            }
                                        }"
                                     dx-validator="{
                                         validationRules: [{
                                            type: 'required',
                                            message: 'Soyadı giriniz.'
                                        }]
                                    }">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="w-100 mb-4" dx-text-area="{
                                        placeholder: 'Mesaj',
                                        label: 'Mesaj',
                                        stylingMode: 'outlined',
                                        labelMode: 'floating',
                                        maxLength: 500,
                                        minHeight:'100px',
                                        autoResizeEnabled: true,
                                        bindingOptions: {
                                            value: 'formData.message'
                                        }
                                     }"
                                     dx-validator=" {
                                        validationRules: [{
                                            type: 'required',
                                            message: 'Yorum giriniz!'
                                        }]
                                }"></div>
                            </div>
                            <div class="col-md-12">
                                <button dx-button="{
                                        text: 'Gönder',
                                        onClick: send,
                                        type: 'default'}"
                                        class="btn bg-green text-white border-0">
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
</main>

@section Scripts {
    <script>
        appModule.controller('appController', ($scope, $http) => {
            $scope.contactCategories = [];

            getContactCategories();

            function getContactCategories() {
                $http.get("/lookup/contact-category").then((res) => {
                    $scope.contactCategories = res.data;
                });
            }

            $scope.send = function (e) {
                const result = e.validationGroup.validate();
                if (result.isValid) {
                    $http.post("/contact", $scope.formData).then((res) => {
                        DevExpress.ui.notify(res.data.message, 'success');
                        e.validationGroup.reset();
                    }, (err) => {
                        DevExpress.ui.notify(err.data.message, 'error');
                    });
                }
            }
        });
    </script>
}