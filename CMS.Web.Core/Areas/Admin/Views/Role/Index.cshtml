@{
    ViewData["Title"] = "Roller";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="page">
    <div class="row mb-2 mt-1">
        <div class="col">
            <el-breadcrumb separator-class="el-icon-arrow-right">
                <el-breadcrumb-item>
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Anasayfa</a>
                </el-breadcrumb-item>
                <el-breadcrumb-item>
                    <a asp-area="Admin" asp-controller="Role" asp-action="Index">Roller</a>
                </el-breadcrumb-item>
            </el-breadcrumb>
        </div>
        <div class="col">
            <el-button class="float-end" icon="el-icon-plus" type="primary" size="mini" v-on:click="add()">Yeni</el-button>
        </div>
    </div>

    <el-table :data="roles" border class="w-100">
        <el-table-column width="125">
            <template slot-scope="scope">
                <el-button size="mini" icon="el-icon-edit" v-on:click="edit(scope.row)"></el-button>
                <el-button size="mini" icon="el-icon-delete" type="danger" v-on:click="remove(scope.row)">
                </el-button>
            </template>
        </el-table-column>
        <el-table-column prop="name" label="Adı"></el-table-column>
        <el-table-column prop="isActive" label="Aktif">
            <template slot-scope="scope">
                <el-checkbox v-model="scope.row.isActive" disabled></el-checkbox>
            </template>
        </el-table-column>
    </el-table>
    <div class="mt-2">
        <el-pagination background layout="prev, pager, next" :page-size="1" :total="roles.length" :size-change></el-pagination>
    </div>



    <el-dialog :visible.sync="isModalActive" :title="modalTitle">
        <template>
            <div class="content">
                <div class="mb-2">
                    <label>Adı</label>
                    <el-input v-model="role.name"></el-input>
                </div>
                <div class="mb-2">
                    <label>Aktif</label>
                    <el-switch v-model="role.isActive"></el-switch>
                </div>
            </div>
            <div slot="footer" class="dialog-footer">
                <el-button v-on:click="hideModal()">Kapat</el-button>
                <el-button type="primary" v-on:click="save()">Kaydet</el-button>
            </div>
        </template>
    </el-dialog>
</div>

@section Scripts {
    <script src="~/js/pages/be/role.js"></script>
}
