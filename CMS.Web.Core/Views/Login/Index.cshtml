@{
    ViewData["Title"] = "Giriş Yap -";
}

<div id="login">
    <div style="margin: 10px 0 10px 0;">
        <el-breadcrumb separator-class="el-icon-arrow-right">
            <el-breadcrumb-item><a href="/">Anasayfa</a></el-breadcrumb-item>
            <el-breadcrumb-item>Giriş Yap</el-breadcrumb-item>
        </el-breadcrumb>
    </div>

    <div class="card">
        <div class="card-content">
            <form v-on:submit="login">
                <div class="row is-desktop">
                    <div class="col-md-4 offset-md-4">
                        <template>
                            <input v-model="formData.returnUrl" type="hidden" value="@ViewBag.ReturnUrl" />
                            <div class="p-3" style="margin: 50px 0;">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Giriş Yap</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label>Email Adres</label>
                                            <el-input type="email" v-model="formData.emailAddress"></el-input>
                                        </div>
                                        <div class="mb-3">
                                            <label>Şifre</label>
                                            <el-input type="password" v-model="formData.password"></el-input>
                                        </div>
                                        <div class="mb-3">
                                            <el-button type="text">
                                                Şifremi Unuttum
                                            </el-button>                                            
                                            <el-button class="float-end" type="primary" native-type="submit">
                                                Giriş Yap
                                            </el-button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </template>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/fe/login.js"></script>
}